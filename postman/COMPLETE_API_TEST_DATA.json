  "testWorkflow": {
    "step1_createDeck": {
      "method": "POST",
      "endpoint": "/api/deck/teacher/create",
      "body": {
        "title": "Math Basics",
        "description": "Basic math concepts",
        "isPublic": true,
        "difficulty": "easy"
      },
      "note": "Tạo deck trước"
    },
    "step2_createFlashcards": {
      "method": "POST",
      "endpoint": "/api/flashcard/teacher/create",
      "body": {
        "deck_id": "{{deckId}}",
        "question": "What is 2 + 2?",
        "answer": "4",
        "tag": "algebra",
        "status": "easy"
      },
      "note": "Tạo ít nhất 4 flashcards để có đủ options khi generate"
    },
    "step3_createExam": {
      "method": "POST",
      "endpoint": "/api/exam/teacher/create",
      "body": {
        "title": "Test Exam",
        "description": "Test exam",
        "flashcards": ["{{flashcardId1}}", "{{flashcardId2}}", "{{flashcardId3}}", "{{flashcardId4}}"],
        "time_limit": 60,
        "isPublic": true
      },
      "note": "Tạo exam với các flashcards"
    },
    "step4_studentStartExam": {
      "method": "POST",
      "endpoint": "/api/submission/student/start/{{examId}}",
      "auth": "studentToken",
      "note": "Student bắt đầu làm bài - hệ thống tự động generate 4 options"
    },
    "step5_studentSubmitAnswer": {
      "method": "POST",
      "endpoint": "/api/submission/student/submit-answer/{{submissionId}}",
      "body": {
        "flashcard_id": "{{flashcardId1}}",
        "selected_option": "B"
      },
      "auth": "studentToken",
      "note": "Nộp câu trả lời"
    },
    "step6_studentFinishExam": {
      "method": "POST",
      "endpoint": "/api/submission/student/finish/{{submissionId}}",
      "auth": "studentToken",
      "note": "Nộp bài - hệ thống tự động chấm điểm"
    }
  }
