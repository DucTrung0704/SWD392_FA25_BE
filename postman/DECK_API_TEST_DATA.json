  "testScenarios": {
    "scenario1_createAndRetrieve": {
      "step1_create": {
        "method": "POST",
        "endpoint": "/api/deck/teacher/create",
        "body": {
          "title": "Test Deck 1",
          "description": "Description for test deck"
        },
        "expectedStatus": 201
      },
      "step2_getAll": {
        "method": "GET",
        "endpoint": "/api/deck/all",
        "expectedStatus": 200,
        "note": "Verify the created deck appears in the list"
      },
      "step3_getById": {
        "method": "GET",
        "endpoint": "/api/deck/all/{deckId}",
        "expectedStatus": 200,
        "note": "Use the _id from step1 response"
      }
    },

    "scenario2_updateFlow": {
      "step1_create": {
        "method": "POST",
        "endpoint": "/api/deck/teacher/create",
        "body": {
          "title": "Original Title",
          "description": "Original description"
        }
      },
      "step2_update": {
        "method": "PUT",
        "endpoint": "/api/deck/teacher/update/{deckId}",
        "body": {
          "title": "Updated Title",
          "description": "Updated description"
        },
        "expectedStatus": 200
      },
      "step3_verify": {
        "method": "GET",
        "endpoint": "/api/deck/all/{deckId}",
        "expectedStatus": 200,
        "note": "Verify title and description are updated"
      }
    },

    "scenario3_permissionTest": {
      "step1_createAsTeacherA": {
        "method": "POST",
        "endpoint": "/api/deck/teacher/create",
        "auth": "teacherAToken",
        "body": {
          "title": "Teacher A's Deck",
          "description": "This deck belongs to Teacher A"
        }
      },
      "step2_tryUpdateAsTeacherB": {
        "method": "PUT",
        "endpoint": "/api/deck/teacher/update/{deckId}",
        "auth": "teacherBToken",
        "body": {
          "title": "Trying to update"
        },
        "expectedStatus": 403,
        "note": "Should fail - Teacher B cannot edit Teacher A's deck"
      },
      "step3_updateAsAdmin": {
        "method": "PUT",
        "endpoint": "/api/deck/teacher/update/{deckId}",
        "auth": "adminToken",
        "body": {
          "title": "Updated by Admin"
        },
        "expectedStatus": 200,
        "note": "Should succeed - Admin can edit any deck"
      }
    },

    "scenario4_deleteFlow": {
      "step1_create": {
        "method": "POST",
        "endpoint": "/api/deck/teacher/create",
        "body": {
          "title": "Deck to be deleted",
          "description": "This deck will be deleted"
        }
      },
      "step2_delete": {
        "method": "DELETE",
        "endpoint": "/api/deck/teacher/delete/{deckId}",
        "expectedStatus": 200
      },
      "step3_verifyDeleted": {
        "method": "GET",
        "endpoint": "/api/deck/all/{deckId}",
        "expectedStatus": 404,
        "note": "Should return 404 after deletion"
      }
    }
  },

