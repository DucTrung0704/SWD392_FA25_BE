  "testScenarios": {
    "scenario1_createAndRetrieve": {
      "step1_create": {
        "method": "POST",
        "endpoint": "/api/flashcard/teacher/create",
        "body": {
          "deck_id": "{{deckId}}",
          "question": "What is 2 + 2?",
          "answer": "4",
          "tag": "arithmetic"
        },
        "expectedStatus": 201,
        "note": "Tạo flashcard mới"
      },
      "step2_getAll": {
        "method": "GET",
        "endpoint": "/api/flashcard/student/all",
        "expectedStatus": 200,
        "note": "Lấy tất cả flashcards"
      },
      "step3_getByDeck": {
        "method": "GET",
        "endpoint": "/api/flashcard/student/deck/{{deckId}}",
        "expectedStatus": 200,
        "note": "Lấy flashcards theo deck"
      },
      "step4_getById": {
        "method": "GET",
        "endpoint": "/api/flashcard/student/{{flashcardId}}",
        "expectedStatus": 200,
        "note": "Lấy flashcard theo ID (lấy từ step1 response)"
      }
    },

    "scenario2_updateFlow": {
      "step1_create": {
        "method": "POST",
        "endpoint": "/api/flashcard/teacher/create",
        "body": {
          "deck_id": "{{deckId}}",
          "question": "Original question",
          "answer": "Original answer"
        }
      },
      "step2_update": {
        "method": "PUT",
        "endpoint": "/api/flashcard/teacher/update/{{flashcardId}}",
        "body": {
          "question": "Updated question",
          "answer": "Updated answer",
          "tag": "updated-tag"
        },
        "expectedStatus": 200
      },
      "step3_verify": {
        "method": "GET",
        "endpoint": "/api/flashcard/student/{{flashcardId}}",
        "expectedStatus": 200,
        "note": "Xác minh đã được cập nhật"
      }
    },

    "scenario3_deleteFlow": {
      "step1_create": {
        "method": "POST",
        "endpoint": "/api/flashcard/teacher/create",
        "body": {
          "deck_id": "{{deckId}}",
          "question": "Question to delete",
          "answer": "Answer"
        }
      },
      "step2_delete": {
        "method": "DELETE",
        "endpoint": "/api/flashcard/teacher/delete/{{flashcardId}}",
        "expectedStatus": 200
      },
      "step3_verifyDeleted": {
        "method": "GET",
        "endpoint": "/api/flashcard/student/{{flashcardId}}",
        "expectedStatus": 404,
        "note": "Xác minh đã bị xóa"
      }
    },

    "scenario4_permissionTest": {
      "step1_createDeckPrivate": {
        "method": "POST",
        "endpoint": "/api/deck/teacher/create",
        "body": {
          "title": "Private Deck",
          "description": "This deck is private",
          "isPublic": false
        },
        "note": "Tạo deck private (isPublic = false)"
      },
      "step2_createFlashcard": {
        "method": "POST",
        "endpoint": "/api/flashcard/teacher/create",
        "body": {
          "deck_id": "{{privateDeckId}}",
          "question": "Private question",
          "answer": "Private answer"
        }
      },
      "step3_studentTryAccess": {
        "method": "GET",
        "endpoint": "/api/flashcard/student/deck/{{privateDeckId}}",
        "auth": "studentToken",
        "expectedStatus": 403,
        "note": "Student không thể xem flashcards từ private deck"
      },
      "step4_makeDeckPublic": {
        "method": "PUT",
        "endpoint": "/api/deck/teacher/update/{{privateDeckId}}",
        "body": {
          "isPublic": true
        },
        "note": "Chuyển deck thành public"
      },
      "step5_studentAccessAfterPublic": {
        "method": "GET",
        "endpoint": "/api/flashcard/student/deck/{{privateDeckId}}",
        "auth": "studentToken",
        "expectedStatus": 200,
        "note": "Sau khi public, student có thể xem"
      }
    }
  },

